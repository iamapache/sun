<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/ll_tab_view"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"
              android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_tab_icon"
        android:layout_width="@dimen/d_24dp"
        android:layout_height="@dimen/d_24dp"
        android:layout_marginTop="@dimen/d_3dp"
        android:scaleType="fitXY"/>

    <TextView
        android:id="@+id/tv_tab_text"
        style="@style/tabTextSizeStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/d_3dp"
        android:gravity="center"
        android:textColor="@color/common_title"/>
</LinearLayout>