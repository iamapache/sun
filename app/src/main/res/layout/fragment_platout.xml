<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/d_44dp"
                android:layout_marginTop="@dimen/d_15dp"
                android:gravity="center_vertical">

                <TextView

                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/d_15dp"
                    android:text="@string/coin"
                    android:maxLines="1"
                    android:textColor="@color/common_text_1"
                    android:textSize="@dimen/d_16dp"/>


                <TextView
                    android:id="@+id/coinname"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/d_15dp"
                    android:background="@null"
                    android:maxLength="64"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:hint="@string/selectcoin"
                    android:textColor="@color/common_text_1"
                    android:textColorHint="@color/colorCutOffSide"
                    android:textSize="@dimen/d_16dp"/>

                <ImageView
                    android:background="@mipmap/icon_right"
                    android:layout_width="wrap_content"
                    android:layout_marginRight="15dp"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/d_44dp"
                android:layout_marginTop="@dimen/d_15dp"
                android:gravity="center_vertical">

                <TextView

                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/d_15dp"
                    android:text="@string/UserID"
                    android:maxLines="1"
                    android:textColor="@color/common_text_1"
                    android:textSize="@dimen/d_16dp"/>


                <EditText
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/d_15dp"
                    android:background="@null"
                    android:hint="@string/userID"
                    android:textColor="@color/common_text_1"
                    android:textColorHint="@color/colorCutOffSide"
                    android:textSize="@dimen/d_16dp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/d_44dp"
                android:layout_marginTop="@dimen/d_15dp"
                android:gravity="center_vertical">

                <TextView

                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/d_15dp"
                    android:text="@string/number"
                    android:maxLines="1"
                    android:textColor="@color/common_text_1"
                    android:textSize="@dimen/d_16dp"/>


                <EditText
                    android:id="@+id/number"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/d_15dp"
                    android:background="@null"
                    android:hint="@string/entrureturnnumber"
                    android:textColor="@color/common_text_1"
                    android:textColorHint="@color/colorCutOffSide"
                    android:textSize="@dimen/d_16dp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/d_44dp"
                android:layout_marginTop="@dimen/d_15dp"
                android:gravity="center_vertical">

                <TextView

                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/d_15dp"
                    android:text="@string/transactionpass"
                    android:maxLines="1"
                    android:textColor="@color/common_text_1"
                    android:textSize="@dimen/d_16dp"/>


                <EditText
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/d_15dp"
                    android:background="@null"
                    android:hint="@string/entrytranspwd"
                    android:inputType="textPassword"
                    android:textColor="@color/common_text_1"
                    android:textColorHint="@color/colorCutOffSide"
                    android:textSize="@dimen/d_16dp"/>

            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/submit"
            style="@style/ButtonStyle"
            android:layout_marginTop="@dimen/d_30dp"
            android:background="@drawable/common_button_shape"
            android:text="@string/oksubmit"/>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>