<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    xmlns:tools="http://schemas.android.com/tools"
                                    android:id="@+id/cardView"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
    android:background="@drawable/gradient_asset"
                                   >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/d_100dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/d_59dp"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_marginLeft="@dimen/d_15dp"
                android:layout_marginRight="@dimen/d_15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/asset_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/title_color"
                    android:textSize="14dp"
                    tools:text="阴阳师"/>

                <TextView
                    android:id="@+id/assets"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="14dp"
                    tools:text="000000000000000000"/>
            </LinearLayout>


            <LinearLayout
                android:layout_marginLeft="@dimen/d_15dp"
                android:layout_marginRight="@dimen/d_15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/d_5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/frozen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:textSize="14dp"
                    tools:text="阴阳师"/>

                <TextView
                    android:id="@+id/avail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="14dp"
                    tools:text="阴阳师"/>
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#343747"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_buycoin"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/buycoin"
                    android:text="@string/Deposit"
                    android:drawablePadding="6dp"
                    android:textColor="@color/white"
                    android:textSize="14dp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_sellercoin"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/sellercoin"
                    android:text="@string/Withdrawal"
                    android:drawablePadding="6dp"
                    android:textColor="@color/white"
                    android:textSize="14dp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_bill"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/bill"
                    android:text="@string/bill"
                    android:drawablePadding="6dp"
                    android:textColor="@color/white"
                    android:textSize="14dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>