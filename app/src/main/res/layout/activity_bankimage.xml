<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/colorCutOffSide"
              android:orientation="vertical">

    <com.madaex.exchange.common.view.CustomToolBar
        android:layout_width="match_parent"
        android:layout_height="@dimen/d_44dp"
        android:orientation="vertical"
        app:barBackground="@color/colorTheme"
        app:left_btn_src="@mipmap/icon_back"
        app:left_btn_visible="true"
        app:left_tv_text="@string/back"
        app:left_tv_visible="true"
        app:title_color="@color/white"
        app:title_text="@string/BankPay"
        app:title_visible="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="440dp"
        android:layout_margin="30dp"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@color/title_color"
            android:gravity="center"
            android:text="银行卡支付"
            android:textColor="@color/white"
            android:textSize="25sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="@dimen/d_15dp"
            android:text="@string/depositbank"
            android:textColor="@color/common_text_2"
            android:textSize="14sp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/d_44dp"
            android:background="@color/white"
            android:gravity="center_vertical">


            <TextView
                android:id="@+id/bankname"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/d_15dp"
                android:layout_marginRight="@dimen/d_15dp"
                android:background="@null"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:textColor="@color/common_text_1"
                android:textColorHint="@color/colorCutOffSide"
                android:textSize="@dimen/d_16dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:text="@string/accountnames"
                android:textColor="@color/common_text_2"
                android:textSize="14sp"
                />


            <TextView
                android:id="@+id/copyname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:text="@string/copy"
                android:textColor="#00a1e9"
                android:textSize="14sp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/d_44dp"
            android:background="@color/white"
            android:gravity="center_vertical">


            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/d_15dp"
                android:layout_marginRight="@dimen/d_15dp"
                android:background="@null"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:textColor="@color/common_text_1"
                android:textColorHint="@color/colorCutOffSide"
                android:textSize="@dimen/d_16dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:text="@string/account"
                android:textColor="@color/common_text_2"
                android:textSize="14sp"
                />


            <TextView
                android:id="@+id/copyuser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:text="@string/copy"
                android:textColor="#00a1e9"
                android:textSize="14sp"
                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/d_44dp"
            android:background="@color/white"
            android:gravity="center_vertical">


            <TextView
                android:id="@+id/user"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/d_15dp"
                android:layout_marginRight="@dimen/d_15dp"
                android:background="@null"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text=""
                android:textColor="@color/common_text_1"
                android:textColorHint="@color/colorCutOffSide"
                android:textSize="@dimen/d_16dp"/>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>