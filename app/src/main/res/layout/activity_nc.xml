<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <com.madaex.exchange.common.view.CustomToolBar
        android:layout_width="match_parent"
        android:layout_height="@dimen/d_44dp"
        android:orientation="vertical"
        app:barBackground="@color/colorTheme"
        app:left_btn_src="@mipmap/icon_back"
        app:left_btn_visible="true"
        app:left_tv_text="@string/back"
        app:left_tv_visible="true"
        app:right_btn_src="@mipmap/mark_list"
        app:right_btn_visible="true"
        app:title_color="@color/white"
        app:title_text="@string/recharges"
        app:title_visible="true"/>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/ll_addr"
                android:layout_width="match_parent"
                android:layout_height="@dimen/d_64dp"
                android:layout_marginTop="@dimen/d_15dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/d_15dp"
                    android:maxLines="1"
                    android:text="@string/walletaddress"
                    android:textColor="@color/common_text_1"
                    android:textSize="@dimen/d_16dp"/>


                <TextView
                    android:id="@+id/billaddr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/d_15dp"
                    android:layout_marginRight="@dimen/d_15dp"
                    android:layout_weight="1"
                    android:maxLines="3"
                    android:text="0x4f8b17447a381044c7d352b4db197b9dec5490c6"
                    android:textColor="@color/common_text_1"
                    android:textSize="@dimen/d_16dp"/>

                <TextView
                    android:id="@+id/copy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/d_15dp"
                    android:maxLines="1"
                    android:text="@string/Copyaddress"
                    android:textColor="@color/common_bule"
                    android:textSize="@dimen/d_16dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/d_44dp"
                android:layout_marginTop="@dimen/d_15dp"
                android:background="@color/white"
                android:gravity="center_vertical">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/d_15dp"
                    android:maxLines="1"
                    android:text="@string/Prepaidnumber"
                    android:textColor="@color/common_text_1"
                    android:textSize="@dimen/d_16dp"/>


                <EditText
                    android:id="@+id/number"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/d_15dp"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="@string/_100"
                    android:maxLength="64"
                    android:inputType="numberDecimal"
                    android:textColor="@color/common_text_1"
                    android:textColorHint="@color/colorCutOffSide"
                    android:textSize="@dimen/d_16dp"/>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fffdbb"
                android:drawableLeft="@mipmap/kgf"
                android:drawablePadding="@dimen/d_5dp"
                android:padding="@dimen/d_8dp"
                android:text="@string/Proportion"
                android:textColor="@color/common_text_3"
                android:textSize="@dimen/d_12dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/d_44dp"
                android:layout_marginTop="@dimen/d_15dp"
                android:background="@color/white"
                android:gravity="center_vertical">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/d_15dp"
                    android:maxLines="1"
                    android:text="@string/Getnumber"
                    android:textColor="@color/common_text_1"
                    android:textSize="@dimen/d_16dp"/>


                <TextView
                    android:id="@+id/getnumber"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/d_15dp"
                    android:background="@null"
                    android:text=""
                    android:gravity="center_vertical"
                    android:textColor="@color/common_text_1"
                    android:textColorHint="@color/colorCutOffSide"
                    android:textSize="@dimen/d_16dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/d_44dp"
                android:layout_marginTop="@dimen/d_15dp"
                android:background="@color/white"
                android:gravity="center_vertical">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/d_15dp"
                    android:maxLines="1"
                    android:text="@string/transactionpass"
                    android:textColor="@color/common_text_1"
                    android:textSize="@dimen/d_16dp"/>


                <EditText
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/d_15dp"
                    android:background="@null"
                    android:hint="@string/entrytranspw"
                    android:inputType="numberPassword"
                    android:textColor="@color/common_text_1"
                    android:textColorHint="@color/colorCutOffSide"
                    android:textSize="@dimen/d_16dp"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/d_44dp"
                android:layout_marginTop="@dimen/d_15dp"
                android:background="@color/white"
                android:gravity="center_vertical">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/d_15dp"
                    android:maxLines="1"
                    android:text="@string/Remarkswalletaddress"
                    android:textColor="@color/common_text_1"
                    android:textSize="@dimen/d_16dp"/>


                <EditText
                    android:id="@+id/code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/d_15dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="@string/NCwalletaddress"
                    android:maxLines="1"
                    android:textColor="@color/common_text_1"
                    android:textColorHint="@color/colorCutOffSide"
                    android:textSize="@dimen/d_16dp"/>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/d_5dp"
                android:padding="@dimen/d_8dp"
                android:text="@string/Pleaseuploadfilelarge"
                android:textColor="@color/common_text_3"
                android:textSize="@dimen/d_12dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/d_5dp"
                android:padding="@dimen/d_8dp"
                android:text="@string/Uploadpaymentscreenshot"
                android:textColor="@color/common_text_1"
                android:textSize="@dimen/d_16dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="@dimen/d_15dp"
                android:layout_marginRight="15dp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/img"
                    android:layout_width="150dp"

                    android:layout_height="180dp"
                    android:background="@mipmap/selectpbg"/>
            </LinearLayout>

            <Button
                android:id="@+id/submit"
                style="@style/ButtonStyle"
                android:layout_marginTop="@dimen/d_30dp"
                android:layout_marginBottom="60dp"
                android:text="@string/Confirm"/>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>