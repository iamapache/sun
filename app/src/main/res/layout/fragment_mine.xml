<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/d_44dp"
                android:background="@color/colorTheme"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="@dimen/d_22dp"
                    android:layout_height="@dimen/d_22dp"
                    android:layout_marginRight="@dimen/d_15dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/item_mine_cetener"
                    android:textColor="@color/white"
                    android:textSize="18dp"/>


                <ImageView
                    android:id="@+id/img"
                    android:layout_width="@dimen/d_22dp"
                    android:layout_height="@dimen/d_22dp"
                    android:layout_marginRight="@dimen/d_15dp"
                    android:src="@mipmap/mark_list"/>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/ll_userinfo"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/backGroundColor"
                >

                <RelativeLayout
                    android:id="@+id/rl_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="26dp"
                        android:background="@mipmap/logo"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="98dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/d_4dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/username"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:maxLines="1"
                                android:text="@string/loginregister"
                                android:textColor="#fff"
                                android:textSize="16dp"/>


                            <TextView
                                android:id="@+id/mark"
                                android:visibility="gone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="30dp"
                                android:background="@drawable/code_shape"
                                android:maxLines="1"
                                android:text="复制"
                                android:textColor="#111"
                                android:textSize="13dp"/>


                        </LinearLayout>

                        <Button
                            android:layout_width="74dp"
                            android:layout_height="20dp"

                            android:background="@mipmap/mine_btn"
                            android:maxLines="1"
                            android:text="@string/regularmembers"
                            android:textColor="@color/white"
                            android:textSize="12dp"
                            />


                    </LinearLayout>


                </RelativeLayout>

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="22dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="26dp"
                    android:background="@mipmap/icon_right"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:id="@+id/ll_safe"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:layout_weight="1"
                        android:background="@color/common_black"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="27dp"
                            android:layout_height="27dp"
                            android:layout_marginLeft="20dp"
                            android:background="@mipmap/mine_safe"/>

                        <TextView
                            style="@style/TextColorSizeStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:maxLines="1"
                            android:text="@string/mine_safe"
                            />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="22dp"
                        android:layout_marginRight="20dp"
                        android:background="@mipmap/icon_right"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_authentication"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:layout_weight="1"
                        android:background="@color/common_black"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="27dp"
                            android:layout_height="27dp"
                            android:layout_marginLeft="20dp"
                            android:background="@mipmap/mine_confirm"/>

                        <TextView
                            style="@style/TextColorSizeStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:maxLines="1"
                            android:text="@string/mine_id_confirm"
                            />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="22dp"
                        android:layout_marginRight="20dp"
                        android:background="@mipmap/icon_right"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_agreet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:layout_weight="1"
                        android:background="@color/common_black"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="27dp"
                            android:layout_height="27dp"
                            android:layout_marginLeft="20dp"
                            android:background="@mipmap/mine_agreement"/>

                        <TextView
                            style="@style/TextColorSizeStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:maxLines="1"
                            android:text="@string/mine_agreement"
                            />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="22dp"
                        android:layout_marginRight="20dp"
                        android:background="@mipmap/icon_right"/>
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/ll_about"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:layout_weight="1"
                        android:background="@color/common_black"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="27dp"
                            android:layout_height="27dp"
                            android:layout_marginLeft="20dp"
                            android:background="@mipmap/mine_brief"/>

                        <TextView
                            style="@style/TextColorSizeStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:maxLines="1"
                            android:text="@string/mine_brief"
                            />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="22dp"
                        android:layout_marginRight="20dp"
                        android:background="@mipmap/icon_right"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_lua"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:layout_weight="1"
                        android:background="@color/common_black"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="27dp"
                            android:layout_height="27dp"
                            android:layout_marginLeft="20dp"
                            android:background="@mipmap/mine_language"/>

                        <TextView
                            style="@style/TextColorSizeStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:maxLines="1"
                            android:text="@string/mine_language"
                            />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="22dp"
                        android:layout_marginRight="20dp"
                        android:background="@mipmap/icon_right"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_service"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:layout_weight="1"
                        android:background="@color/common_black"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="27dp"
                            android:layout_height="27dp"
                            android:layout_marginLeft="20dp"
                            android:background="@mipmap/mine_ustomer"/>

                        <TextView
                            style="@style/TextColorSizeStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:maxLines="1"
                            android:text="@string/mine_ustomer"
                            />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="22dp"
                        android:layout_marginRight="20dp"
                        android:background="@mipmap/icon_right"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_update"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:background="@color/common_black"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:layout_marginLeft="20dp"
                        android:background="@mipmap/mine_edition"/>

                    <TextView
                        style="@style/TextColorSizeStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:maxLines="1"
                        android:text="@string/mine_edition"
                        />
                </LinearLayout>

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="22dp"
                    android:layout_marginRight="20dp"
                    android:background="@mipmap/icon_right"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_huod"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:background="@color/common_black"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:layout_marginLeft="20dp"
                        android:background="@mipmap/mine_huod"/>

                    <TextView
                        style="@style/TextColorSizeStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:maxLines="1"
                        android:text="@string/mine_huod"
                        />
                </LinearLayout>

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="22dp"
                    android:layout_marginRight="20dp"
                    android:background="@mipmap/icon_right"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_invitation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:background="@color/common_black"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:layout_marginLeft="20dp"
                        android:background="@mipmap/mine_invitation"/>

                    <TextView
                        style="@style/TextColorSizeStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:maxLines="1"
                        android:text="@string/mine_invitation"
                        />
                </LinearLayout>

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="22dp"
                    android:layout_marginRight="20dp"
                    android:background="@mipmap/icon_right"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>