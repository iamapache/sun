<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swiperefreshlayout"
        android:layout_width="match_parent"

        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <android.support.v4.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="270dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/d_15dp"
                            android:layout_marginTop="@dimen/d_10dp"
                            android:text="@string/orders"
                            android:textColor="#ffffffff"
                            android:textSize="12sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_marginLeft="@dimen/d_15dp"
                            android:layout_marginTop="@dimen/d_10dp"
                            android:layout_marginRight="@dimen/d_5dp"
                            android:background="@drawable/common_bg_greenstroke_corners"
                            android:gravity="center_vertical">

                            <TextView
                                android:id="@+id/deleteone"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_marginRight="@dimen/d_5dp"
                                android:gravity="center"
                                android:text="—"
                                android:textColor="@color/common_green"
                                android:textSize="@dimen/d_18dp" />

                            <View
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:background="@color/common_green" />

                            <EditText
                                android:id="@+id/price"
                                android:layout_width="160dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@null"
                                android:gravity="center"
                                android:hint="@string/entrastPrice"
                                android:inputType="numberDecimal"
                                android:maxLength="10"
                                android:maxLines="1"
                                android:paddingLeft="@dimen/d_5dp"
                                android:textColor="@color/white"
                                android:textColorHint="@color/common_ggray"
                                android:textSize="@dimen/d_12dp" />

                            <View
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:background="@color/common_green" />

                            <TextView
                                android:id="@+id/addone"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_marginRight="@dimen/d_5dp"
                                android:gravity="center"
                                android:text="+"
                                android:textColor="@color/common_green"
                                android:textSize="@dimen/d_18dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="@dimen/d_5dp"
                            android:layout_marginRight="@dimen/d_5dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/Valuegu"
                                android:textColor="#A3AEBA"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/guzhi"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="3dp"
                                android:layout_weight="1"
                                android:gravity="end"
                                android:text="0"
                                android:textColor="#ffffffff"
                                android:textSize="12sp" />
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_marginLeft="@dimen/d_15dp"
                            android:layout_marginTop="@dimen/d_5dp"
                            android:layout_marginRight="@dimen/d_5dp"
                            android:background="@drawable/common_bg_greenstroke_corners"
                            android:gravity="center_vertical">

                            <TextView
                                android:id="@+id/deletetwo"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_marginRight="@dimen/d_5dp"
                                android:gravity="center"
                                android:text="—"
                                android:textColor="@color/common_green"
                                android:textSize="@dimen/d_18dp" />

                            <View
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:background="@color/common_green" />

                            <EditText
                                android:id="@+id/number"
                                android:layout_width="160dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@null"
                                android:gravity="center"
                                android:hint="@string/Quantity"
                                android:inputType="numberDecimal"
                                android:maxLength="12"
                                android:maxLines="1"
                                android:paddingLeft="@dimen/d_5dp"
                                android:textColor="@color/white"
                                android:textColorHint="@color/common_ggray"
                                android:textSize="@dimen/d_12dp" />

                            <View
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:background="@color/common_green" />

                            <TextView
                                android:id="@+id/addtwo"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_marginRight="@dimen/d_5dp"
                                android:gravity="center"
                                android:text="+"
                                android:textColor="@color/common_green"
                                android:textSize="@dimen/d_18dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="@dimen/d_5dp"
                            android:layout_marginRight="@dimen/d_5dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/Available"
                                android:textColor="#A3AEBA"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/keyong"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="end"
                                android:text="0"
                                android:textColor="#ffffffff"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/name2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/d_5dp"
                                android:text="usdt"
                                android:textColor="#A3AEBA"
                                android:textSize="@dimen/d_12dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="22dp"
                            android:layout_marginLeft="@dimen/d_15dp"
                            android:layout_marginTop="@dimen/d_10dp"
                            android:layout_marginRight="@dimen/d_5dp"
                            android:layout_marginBottom="5dp">


                            <RadioGroup
                                android:id="@+id/tabs_rg"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_alignParentBottom="true"
                                android:orientation="horizontal">

                                <RadioButton
                                    android:id="@+id/today_tab"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:background="@drawable/tab_text_drable_selector"
                                    android:button="@null"
                                    android:gravity="center"
                                    android:text="25%"
                                    android:textColor="@color/tab_text_color_selector"
                                    android:textSize="12dp" />

                                <RadioButton
                                    android:id="@+id/record_tab"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="5dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/tab_text_drable_selector"
                                    android:button="@null"
                                    android:gravity="center"
                                    android:text="50%"
                                    android:textColor="@color/tab_text_color_selector"
                                    android:textSize="12dp" />

                                <RadioButton
                                    android:id="@+id/contact_tab"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="5dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/tab_text_drable_selector"
                                    android:button="@null"
                                    android:gravity="center"
                                    android:text="75%"
                                    android:textColor="@color/tab_text_color_selector"
                                    android:textSize="12dp" />

                                <RadioButton
                                    android:id="@+id/settings_tab"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="5dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/tab_text_drable_selector"
                                    android:button="@null"
                                    android:gravity="center"
                                    android:text="100%"
                                    android:textColor="@color/tab_text_color_selector"
                                    android:textSize="12dp" />
                            </RadioGroup>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/d_15dp"
                            android:layout_marginTop="@dimen/d_12dp"
                            android:layout_marginRight="@dimen/d_5dp"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/d_5dp"
                                android:text="@string/Total"
                                android:textColor="#A3AEBA"
                                android:textSize="@dimen/d_12dp" />

                            <TextView
                                android:id="@+id/cny"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="end"
                                android:maxLines="2"
                                android:text="￥0"
                                android:textColor="@color/white"
                                android:textSize="@dimen/d_12dp" />

                            <TextView
                                android:id="@+id/name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/d_5dp"
                                android:text=""
                                android:textColor="#A3AEBA"
                                android:textSize="@dimen/d_12dp" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_deal"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/d_34dp"
                            android:layout_marginLeft="@dimen/d_15dp"
                            android:layout_marginTop="@dimen/d_10dp"
                            android:layout_marginRight="@dimen/d_5dp"
                            android:background="@drawable/common_bg_green_corners"
                            android:gravity="center"
                            android:text="@string/item_seller"
                            android:textColor="@color/white"
                            android:textSize="@dimen/d_16dp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/d_1dp"
                            android:layout_marginTop="@dimen/d_15dp"
                            android:background="@color/common_black" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="horizontal">




                            <TextView
                                android:layout_width="@dimen/d_10dp"
                                android:layout_height="@dimen/d_10dp"
                                android:layout_marginRight="7dp"
                                android:background="@drawable/rect_rounded_red" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="7dp"
                                android:text="@string/buy"
                                android:textColor="#A3AEBA"
                                android:textSize="@dimen/d_9dp" />

                            <TextView
                                android:layout_width="@dimen/d_10dp"
                                android:layout_height="@dimen/d_10dp"
                                android:layout_marginRight="7dp"
                                android:background="@drawable/rect_rounded_arc" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="4dp"
                                android:text="@string/seller"
                                android:textColor="#A3AEBA"
                                android:textSize="@dimen/d_9dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/bili"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="@color/white"
                                android:textSize="@dimen/d_9dp" />
                        </LinearLayout>

                        <com.madaex.exchange.ui.buy.adapter.DepthMapView
                            android:id="@+id/dv_depth"
                            android:layout_width="match_parent"
                            android:layout_height="180dp"

                            app:buy_line_color="@color/common_red"
                            app:buy_path_color="@color/common_red"
                            app:circle_radius="8dp"
                            app:dot_radius="1.5dp"
                            app:line_count="4"
                            app:line_width="1.5dp"
                            app:sell_line_color="@color/common_green"
                            app:sell_path_color="@color/common_green"
                            app:text_color="@color/white"
                            app:text_size="10sp" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/infomation"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/d_15dp"
                        android:layout_marginRight="@dimen/d_5dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:hint="@string/snrcInformation"
                        android:textColor="@color/common_text_1"
                        android:textSize="@dimen/d_14dp"
                        android:visibility="gone" />
                </LinearLayout>
            </android.support.v4.widget.NestedScrollView>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/common_black" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_weight="1"
                    android:gravity="center|bottom"
                    android:orientation="vertical">


                    <com.madaex.exchange.ui.buy.fragment.NoConflictRecyclerView
                        android:id="@+id/sellerrecyclerview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/d_1dp"
                    android:background="@color/common_black" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/d_40dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="5dp"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/last"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/d_15dp"
                            android:layout_weight="1"
                            android:text="0"
                            android:textColor="@color/common_red"
                            android:textSize="@dimen/d_14dp" />

                        <TextView
                            android:id="@+id/coinname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="end"
                            android:text="0"
                            android:textColor="@color/common_red"
                            android:textSize="@dimen/d_12dp" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/baibili"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/d_15dp"
                        android:layout_weight="1"
                        android:text="0"
                        android:textColor="@color/white"
                        android:textSize="@dimen/d_12dp" />

                    <ImageView
                        android:id="@+id/change"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/d_15dp"
                        android:background="@mipmap/icon_sphuansuan"
                        android:visibility="gone" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/d_1dp"
                    android:background="@color/common_black" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_weight="1"
                    android:gravity="center|top"
                    android:orientation="vertical">

                    <com.madaex.exchange.ui.buy.fragment.NoConflictRecyclerView
                        android:id="@+id/buyrecyclerview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginLeft="@dimen/d_10dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="@dimen/d_10dp"
                    android:background="@drawable/common_bg_gray_corners"
                    android:gravity="center">

                    <LinearLayout
                        android:id="@+id/ll_gears"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_gears"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/fivefiles"
                            android:textColor="@color/common_red"
                            android:textSize="@dimen/d_12dp"
                            android:visibility="gone" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/gear"
                            android:textColor="@color/common_text_5"
                            android:textSize="@dimen/d_11dp" />
                    </LinearLayout>

                    <View
                        android:layout_width="@dimen/d_1dp"
                        android:layout_height="wrap_content"
                        android:background="@color/common_text_2" />

                    <LinearLayout
                        android:id="@+id/ll_depth"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/fivefiles"
                            android:textColor="@color/common_red"
                            android:textSize="@dimen/d_12dp"
                            android:visibility="gone" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/depth"
                            android:textColor="@color/common_text_5"
                            android:textSize="@dimen/d_11dp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.SwipeRefreshLayout>
</LinearLayout>