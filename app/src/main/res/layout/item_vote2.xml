<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/i"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:textColor="@color/common_text_1"
            android:textSize="13sp"
            tools:text="ETH"
            />

        <ImageView
            android:id="@+id/img_bank"
            android:layout_width="@dimen/d_30dp"
            android:layout_height="@dimen/d_30dp"
            android:layout_marginLeft="15dp"/>

        <TextView
            android:id="@+id/coinname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:textColor="@color/common_text_1"
            android:textSize="18sp"
            tools:text="ETH"
            />


        <TextView
            android:id="@+id/number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/d_15dp"
            android:layout_weight="1"
            android:gravity="end"
            android:maxLines="1"
            android:textColor="@color/common_text_1"
            android:textSize="18sp"
            tools:text="ETH"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="end"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/status"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/d_15dp"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:visibility="visible"
            android:textColor="@color/common_text_6"
            android:textSize="13sp"
            tools:text="ETH"
            />
        <TextView
            android:id="@+id/total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/d_15dp"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:textColor="@color/common_text_6"
            android:textSize="13sp"
            tools:text="ETH"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="@dimen/d_15dp"
        android:gravity="end"
        android:orientation="horizontal">
        <Button
            android:id="@+id/button"
            android:layout_weight="1"
            style="@style/ButtonStyle"
            android:layout_marginLeft="@dimen/d_25dp"
            android:layout_marginRight="@dimen/d_25dp"
            android:textColor="@color/common_text_3"
            android:background="@drawable/common_button_geayshape"
            android:text="@string/projectdetails"/>
    </LinearLayout>
</LinearLayout>