<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/ll_item"
    android:layout_marginLeft="@dimen/d_15dp"
    android:layout_marginTop="@dimen/d_15dp"
    android:layout_marginRight="@dimen/d_15dp"
    android:background="@mipmap/cueerent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/d_10dp"
        android:layout_marginTop="@dimen/d_10dp"
        android:layout_marginRight="@dimen/d_10dp"
        android:layout_marginBottom="@dimen/d_10dp"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/type_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:drawablePadding="5dp"
                    android:textColor="@color/white"
                    android:textSize="14dp" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/d_5dp"
                    android:maxLines="1"
                    android:textColor="@color/white"
                    android:textSize="12dp"
                    tools:text="成功" />

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>
    <View
        android:layout_marginLeft="@dimen/d_10dp"
        android:layout_marginTop="@dimen/d_3dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d_1dp"
        android:background="@color/common_ggray"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/d_60dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/d_15dp"
            android:background="@mipmap/icon_money"/>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/d_60dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/d_15dp"
                    android:text="0"
                    android:textColor="@color/common_text_1"
                    android:textSize="14sp"/>
                <TextView
                    android:id="@+id/cointype"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/d_15dp"
                    android:text="0"
                    android:textColor="@color/common_text_5"
                    android:textSize="14sp"/>
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/d_15dp"
            android:text="0"
            android:layout_marginRight="@dimen/d_15dp"
            android:textColor="@color/common_text_5"
            android:textSize="14sp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/icon_right"
            android:layout_marginRight="@dimen/d_15dp"/>
    </LinearLayout>
</LinearLayout>