<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    xmlns:tools="http://schemas.android.com/tools"
                                    android:id="@+id/cardView"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    app:cardBackgroundColor="@color/common_black"
                                    app:cardCornerRadius="5dp"
                                    app:cardElevation="3dp"
                                    app:cardMaxElevation="7dp"
                                    app:cardPreventCornerOverlap="true"
                                    app:cardUseCompatPadding="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/d_100dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/d_59dp"

            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_marginLeft="@dimen/d_15dp"
                android:layout_marginRight="@dimen/d_15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/transtype"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/common_text_1"
                    android:textSize="17dp"
                    tools:text="阴阳师"/>

                <TextView
                    android:id="@+id/transmoney"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/title_color"
                    android:textSize="17dp"
                    tools:text="000000000000000000"/>
            </LinearLayout>


            <LinearLayout
                android:layout_marginLeft="@dimen/d_15dp"
                android:layout_marginRight="@dimen/d_15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/d_5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/transtcount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/common_text_5"
                    android:textSize="14dp"
                    tools:text="阴阳师"/>

                <TextView
                    android:id="@+id/transnumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/common_text_5"
                    android:textSize="14dp"
                    android:text="@string/price1"/>
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">


                <TextView
                    android:id="@+id/transtime"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/d_15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Deposit"
                    android:textColor="@color/common_text_6"
                    android:textSize="14dp"/>
            <TextView
                android:id="@+id/info"
                android:layout_marginLeft="@dimen/d_15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/payinformation"
                android:layout_marginRight="@dimen/dp_10"
                android:textColor="@color/common_bule"
                android:textSize="14dp"/>
            <View
                android:id="@+id/view"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/d_10dp"
                android:layout_marginTop="@dimen/d_10dp"
                android:background="@color/colorCutOffSide"/>
            <TextView
                android:id="@+id/transstatus"
                android:layout_marginLeft="@dimen/d_10dp"
                android:layout_marginRight="@dimen/d_15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Deposit"
                android:textColor="@color/title_color"
                android:textSize="14dp"/>
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>