<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/d_44dp"

        android:gravity="center_vertical">

        <ImageView
            android:layout_width="@dimen/d_44dp"
            android:layout_height="@dimen/d_22dp"
            android:layout_marginLeft="@dimen/d_15dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:visibility="gone"
                android:src="@mipmap/applogo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="@string/item_market"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:textStyle="bold" />
        </LinearLayout>


        <hlq.ImageViewBound
            android:id="@+id/img_msg"
            android:layout_width="@dimen/d_25dp"
            android:layout_height="@dimen/d_25dp"
            android:layout_marginRight="@dimen/d_5dp"
            android:src="@mipmap/mark_message" />

        <ImageView
            android:id="@+id/img_popview"
            android:layout_width="@dimen/d_25dp"
            android:layout_height="@dimen/d_25dp"
            android:layout_marginLeft="@dimen/d_5dp"
            android:layout_marginRight="@dimen/d_15dp"
            android:src="@mipmap/mark_list"/>


    </LinearLayout>
    <com.flyco.tablayout.SlidingTabLayout
        android:id="@+id/stl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d_44dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        tl:tl_tab_space_equal="false"
        tl:tl_indicator_color="@color/common_hui"
        tl:tl_indicator_margin_left="2dp"
        tl:tl_indicator_margin_right="2dp"
        tl:tl_indicator_style="BLOCK"
        tl:tl_textSelectColor="@color/common_cheng"
        tl:tl_textUnselectColor="@color/common_title_unbg"
        tl:tl_textsize="@dimen/d_15dp"/>
