<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/d_40dp"
        android:background="@color/colorTheme"
        android:gravity="center|bottom">

        <TextView
            android:id="@+id/currentype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/d_5dp"
            android:gravity="end"
            android:textColor="@color/white"
            android:textSize="@dimen/d_15dp"
            android:maxLines="1"
            tools:text="MT现价"/>

        <TextView
            android:id="@+id/exchangeType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/d_5dp"
            android:gravity="center"
            android:maxLines="1"
            android:textColor="@color/common_red"
            android:textSize="@dimen/d_22dp"
            tools:text="0"/>

        <TextView
            android:id="@+id/sellRmb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/d_5dp"
            android:gravity="start"
            android:text="0"
            android:maxLines="1"
            android:textColor="@color/common_red"
            android:textSize="@dimen/d_17dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/d_5dp"
        android:background="@color/colorTheme"
        android:gravity="center_vertical|bottom">
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/d_55dp"
        android:background="@color/colorTheme"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/d_10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/changes"
                    android:textColor="#a8b2bc"
                    android:textSize="@dimen/d_14dp"/>

                <TextView
                    android:id="@+id/rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/d_15dp"
                    android:layout_weight="1"
                    android:textColor="@color/common_red"
                    android:textSize="@dimen/d_14dp"
                    tools:text="0"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/zuigao"
                    android:textColor="#a8b2bc"
                    android:textSize="@dimen/d_14dp"/>

                <TextView
                    android:id="@+id/hight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/d_15dp"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:textSize="@dimen/d_14dp"
                    tools:text="0"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/d_10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/make"
                    android:textColor="#a8b2bc"
                    android:textSize="@dimen/d_14dp"/>

                <TextView
                    android:id="@+id/volume"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/d_15dp"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:textSize="@dimen/d_14dp"
                    tools:text="0"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/low"
                    android:textColor="#a8b2bc"
                    android:textSize="@dimen/d_14dp"/>

                <TextView
                    android:id="@+id/low"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/d_15dp"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:textSize="@dimen/d_14dp"
                    tools:text="0"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>